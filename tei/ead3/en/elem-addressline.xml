<?xml version="1.0" encoding="UTF-8"?>
<div type="elementDocumentation" xml:id="elem-addressline" xmlns:ead="http://ead3.archivists.org/schema/" xmlns="http://www.tei-c.org/ns/1.0">
               <head>
                  <gi>addressline</gi>
               </head>
               <div type="fullName">
                  <p xml:lang="eng">Address Line</p>
               </div>
               <div type="summary">
                  <p>A generic element for recording one line of an address, whether postal or other.</p>
               </div>
               <div type="mayContain">
                  <p>[text], abbr, emph, expan, foreign, lb, ptr, ref</p>
               </div>
               <div type="mayOccurWithin">
                  <p>address</p>
               </div>
               <div type="attributes">
                  <p>
                     <list type="gloss">
                        <label>altrender</label>
                        <item>Optional</item>
                        <label>audience</label>
                        <item>Optional (values limited to: external, internal)</item>
                        <label>id</label>
                        <item>Optional</item>
                        <label>lang</label>
                        <item>Optional</item>
                        <label>localtype</label>
                        <item>Optional</item>
                        <label>script</label>
                        <item>Optional</item>
                     </list>
                  </p>
               </div>
               <div type="description">
                  <p>
                     <gi>addressline</gi> may be repeated as many times as necessary to enter all parts of an address.</p>
               </div>
               <div type="attributeusage">
                  <list type="simple">
                     <item>Use <att>localtype</att>, if local use requires specification of the type of information contained in the line.</item>
                  </list>
               </div>
               <div type="availability">
                  <p>Required, repeatable</p>
               </div>
