<?xml version="1.0" encoding="UTF-8"?>
<div type="attributeDocumentation" xml:id="attr-pgwide" xmlns:ead="http://ead3.archivists.org/schema/" xmlns="http://www.tei-c.org/ns/1.0">
               <head>
                  <att>pgwide</att>
               </head>
               <div type="fullName">
                  <p>Page Wide</p>
               </div>
               <div type="summary">
                  <p>Indicates whether a table runs the width of the page or the width of the text column. The value "true" indicates the width of the page; "false" indicates the text column only.</p>
               </div>
               <div type="values">
                  <p>false, true</p>
               </div>
               <div type="examples">
                  <egXML xmlns="http://www.tei-c.org/ns/Examples" xml:lang="eng" valid="true">
                     <ead:scopecontent>
                        <ead:table pgwide="false">
                           <ead:tgroup cols="4">
                              <ead:colspec colnum="1" colname="correspondent"/>
                              <ead:colspec colnum="2" colname="total"/>
                              <ead:colspec colnum="3" colname="sent"/>
                              <ead:colspec colnum="4" colname="received"/>
                              <ead:thead>
                                 <ead:row>
                                    <ead:entry colname="correspondent">Correspondent</ead:entry>
                                    <ead:entry colname="total">Total number of letters</ead:entry>
                                    <ead:entry namest="sent" nameend="received">Letters sent and received</ead:entry>
                                 </ead:row>
                              </ead:thead>
                              <ead:tbody>
                                 <!-- [...] -->
                                 <ead:row>
                                    <ead:entry colname="correspondent">Douglass, Frederick</ead:entry>
                                    <ead:entry colname="total">93</ead:entry>
                                    <ead:entry colname="sent">47</ead:entry>
                                    <ead:entry colname="received">46</ead:entry>
                                 </ead:row>
                                 <ead:row>
                                    <ead:entry colname="correspondent">Phillips, Wendell</ead:entry>
                                    <ead:entry colname="total">17</ead:entry>
                                    <ead:entry colname="sent">12</ead:entry>
                                    <ead:entry colname="received">5</ead:entry>
                                 </ead:row>
                                 <!-- [...] -->
                              </ead:tbody>
                           </ead:tgroup>
                        </ead:table>
                     </ead:scopecontent>
                  </egXML>
               </div>
            </div>